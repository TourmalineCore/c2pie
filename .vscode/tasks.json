{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run JPEG test application",
            "type": "shell",
            "command": "poetry install --no-interaction --no-ansi > /dev/null && python ./test_application/jpeg_test_app.py",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Run PDF test application",
            "type": "shell",
            "command": "poetry install --no-interaction --no-ansi > /dev/null && python ./test_application/pdf_test_app.py",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Run unit tests",
            "type": "shell",
            "command": "pytest --ignore=test_application -m \"not e2e\"",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Build package",
            "type": "shell",
            "command": "rm -rf dist && rm -rf build && poetry build",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}